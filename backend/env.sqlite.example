# ===========================================
# SQLITE CONFIGURATION (Simplest for Local)
# ===========================================
# Copy this to .env to use SQLite for local development
# Command: copy env.sqlite.example .env
# ===========================================

# App Settings
APP_NAME=Hisab
DEBUG=true

# Database - Use SQLite (simplest for local)
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./split.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# AI Features (optional)
# OPENAI_API_KEY=your-openai-api-key

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,capacitor://localhost,http://localhost
