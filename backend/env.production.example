# ===========================================
# AWS PRODUCTION CONFIGURATION
# ===========================================
# For Lambda deployment - set these in AWS Lambda environment variables
# ===========================================

# App Settings
APP_NAME=Hisab
DEBUG=false

# Database - Use AWS DynamoDB
DATABASE_TYPE=dynamodb
AWS_REGION=ap-south-1
DYNAMODB_TABLE_PREFIX=hisab_
# No endpoint URL = use real AWS DynamoDB

# Security - CHANGE THESE!
SECRET_KEY=generate-a-secure-random-string-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# AI Features (optional)
# OPENAI_API_KEY=your-openai-api-key

# CORS - Update with your actual domain
ALLOWED_ORIGINS=https://hisab.paritoshagarwal.com,https://paritoshagarwal.com,*

