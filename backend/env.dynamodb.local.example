# ===========================================
# LOCAL DYNAMODB CONFIGURATION
# ===========================================
# Copy this to .env to test with local DynamoDB
# 
# Before using:
#   1. Start Docker: docker-compose up -d
#   2. Run: cp env.dynamodb.local.example .env
#   3. Initialize tables: python scripts/init_dynamodb.py
# ===========================================

# App Settings
APP_NAME=Hisab
DEBUG=true

# Database - Use DynamoDB
DATABASE_TYPE=dynamodb
AWS_REGION=ap-south-1
DYNAMODB_TABLE_PREFIX=hisab_
DYNAMODB_ENDPOINT_URL=http://localhost:8000

# AWS Credentials (for local DynamoDB, any value works)
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# AI Features (optional)
# OPENAI_API_KEY=your-openai-api-key

# AWS Cognito (REQUIRED - get these from AWS Cognito Console)
# 1. Go to AWS Console → Cognito → User pools → Your pool
# 2. Copy User Pool ID from "General settings"
# 3. Copy App Client ID from "App integration" → "App clients"
COGNITO_USER_POOL_ID=ap-south-1_XXXXXXXXX
COGNITO_APP_CLIENT_ID=your-app-client-id-here
COGNITO_REGION=ap-south-1

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,capacitor://localhost,http://localhost,*

